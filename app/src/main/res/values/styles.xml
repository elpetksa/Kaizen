        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="rippleColor">@null</item>
        <item name="checkedIcon">@drawable/ic_baseline_check_24</item>
        <item name="chipIconSize">18dp</item>
    </style>

    <style name="Theme.Elpe.Chip.Action" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:checkable">false</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
        <item name="android:textAppearance">@style/Theme.Elpe.Text.P2.Bold</item>
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="rippleColor">@null</item>
        <item name="checkedIcon">@drawable/ic_baseline_check_24</item>
        <item name="chipIconSize">18dp</item>
    </style>

    <style name="Theme.Elpe.Chip.Action.Success" parent="@style/Theme.Elpe.Chip.Action">
        <item name="android:textColor">@color/success</item>
        <item name="chipStrokeColor">@color/success</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Theme.Elpe.Chip.Action.Success.Filled" parent="@style/Theme.Elpe.Chip.Action.Success">
        <item name="chipBackgroundColor">@color/success</item>
        <item name="android:textColor">@color/on_success</item>
        <item name="chipStrokeColor">@color/success</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Theme.Elpe.Chip.Action.Primary.Filled" parent="@style/Theme.Elpe.Chip.Action.Success">
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="chipIconTint">@color/on_primary</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>


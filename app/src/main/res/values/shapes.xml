<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Shape Appearance for small components like chips, buttons, text fields and FABs-->
    <style name="Theme.Elpe.Shape.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/shape_small_corner_radius</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="Theme.Elpe.Shape.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/shape_medium_corner_radius</item>
    </style>

    <!--Shape Appearance for large components like side and bottom navigation drawers-->
    <style name="Theme.Elpe.Shape.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/shape_large_corner_radius</item>
    </style>

</resources>